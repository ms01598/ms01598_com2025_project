.container.text-center.p-3
  %h1 Artists


.jumbotron
  %table.table.table-hover.table-responsive
    %thead
      %tr
        %th Name
        %th{colspan: "2"}

    %tbody
      - @artists.each do |artist|
        %tr
          %td= artist.name
          %td= link_to 'Edit', edit_artist_path(artist)
          %td= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' }

  %br/
  .row.btn.btn-default
    = link_to 'Add Artist', new_artist_path
