= form_for @album do |f|
  - if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |message|
          %li= message

  .container-fluid
    .row.form-row
      .col-4
      .field.form-group.col-4
        = f.text_field :title , class:"form-control", placeholder: "Title"
        = f.number_field :number_of_songs, class:"form-control", placeholder: "Number Of Songs"
        = f.number_field :release_year, class:"form-control", placeholder: "Release Year"
      .col-4



  .actions.btn
    = f.submit "Add Album"
