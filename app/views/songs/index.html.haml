%h1= t('.title')
%p= t('.welcome')

%p#notice= notice
%h1 Songs
%table.table.table-hover
  %thead
    %tr
      %th Title
      %th Artist
      %th Album
      %th Duration
      %th Favourite
      %th{colspan: "3"}
  %tbody
    - @songs.each do |song|
      %tr
        %td= song.title
        %td= song.artist.name
        %td= song.album.title
        %td= song.duration
        %td= song.favourite
        %td= link_to 'Show', song
        %td= link_to 'Edit', edit_song_path(song)
        %td= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'Add Song', new_song_path , class: "btn btn-secondary"
